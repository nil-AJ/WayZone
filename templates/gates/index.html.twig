{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}

<form action="{{path('connexion')}}" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input class="form-control" name="_username" required placeholder="Entrer votre email" type="email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input class="form-control"  name="_password" required placeholder="Mot de passe ..." type="password">
        </div>
        <button type="submit" class="btn btn-primary">Connexion</button>
</form>

{% endblock %}
